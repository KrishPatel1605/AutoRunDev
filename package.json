{
  "name": "autorundev",
  "displayName": "Auto Run Dev",
  "publisher": "KrishPatel",
  "repository": {
    "type": "git",
    "url": "https://github.com/KrishPatel1605/AutoRunDev"
  },
  "bugs": {
    "url": "https://github.com/KrishPatel1605/AutoRunDev/issues"
  },
  "homepage": "https://github.com/KrishPatel1605/AutoRunDev#readme",
  "keywords": [
    "development",
    "automation",
    "frontend",
    "backend",
    "terminal",
    "project-management"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "description": "VS Code extension for automatically detecting and managing multiple dev projects. Start, stop, and configure all your workspace projects from a single sidebar interface.",
  "version": "0.1.1",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:autorundevView"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "autorundev-sidebar",
          "title": "AutoRunDev",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "autorundev-sidebar": [
        {
          "id": "autorundevView",
          "name": "Controls",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "autorundev.start",
        "title": "Start All Projects",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.autoconfig",
        "title": "Scan & Configure Projects",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.add",
        "title": "Add Custom Project",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.remove",
        "title": "Remove Project",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.runAll",
        "title": "Run All Projects",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.stop",
        "title": "Stop All Projects",
        "category": "AutoRunDev"
      },
      {
        "command": "autorundev.restart",
        "title": "Restart All Projects",
        "category": "AutoRunDev"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "autorundev.start"
        },
        {
          "command": "autorundev.autoconfig"
        },
        {
          "command": "autorundev.add"
        },
        {
          "command": "autorundev.remove"
        },
        {
          "command": "autorundev.runAll"
        },
        {
          "command": "autorundev.stop"
        },
        {
          "command": "autorundev.restart"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.34.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}